{
    "name": "DSC_D2V_MLP",

    "n_gpu": 1,

    "arch": {
        "type": "MLP",
        "args": {}
    },
    "data_loader": {
        "type": "DSC_UnencodedDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "D2V_DSCDataTrainer",
        "args": {},
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 101,
        "verbosity": 1,

        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true
    }
}
