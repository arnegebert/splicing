{
    "name": "DSC",

    "n_gpu": 1,

    "arch": {
        "type": "DeepSplicingCode",
        "args": {}
    },
    "data_loader": {
        "type": "DSCDataLoader",
        "args":{
            "data_dir": "data/hexevent/cassette_filtered.csv",
            "batch_size": 100,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 1,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
