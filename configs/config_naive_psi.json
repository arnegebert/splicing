{
    "name": "PSINaive",

    "n_gpu": 1,

    "arch": {
        "type": "NaivePSIModel",
        "args": {}
    },
    "data_loader": {
        "type": "NaivePSIDataLoader",
        "args":{
            "data_dir": "data/brain_cortex_chrom_1_to_10.csv",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "NaivePSITrainer",
        "args": {},
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 1,

        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
