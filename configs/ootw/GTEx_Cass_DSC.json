{
    "name": "GTEx_Cass_DSC",

    "n_gpu": 1,

    "arch": {
        "type": "DSC",
        "args": {}
    },
    "data_loader": {
        "type": "HEXEvent_To_GTEx_DataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "DSCTrainer",
        "args": {},
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 251,
        "verbosity": 1,

        "monitor": "max val_auc",
        "early_stop": 20,

        "tensorboard": false
    },
    "cross_validation": false
}