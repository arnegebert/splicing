{
    "name": "ReconJunc_D2V_MLP",

    "n_gpu": 1,

    "arch": {
        "type": "MLP2",
        "args": {}
    },
    "data_loader": {
        "type": "GTEx_EmbeddedDataLoader",
        "args":{
            "data_dir": "data/distributed/brain_cortex_embedded_recon_junc_class.npy",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "embedded": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "GTEx_D2V_Trainer",
        "args": {"embedded": true},
        --> make sure that newest test set changes are integrated (or not, since it likely doesn't matter)
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 101,
        "verbosity": 1,

        "monitor": "max val_auc",
        "logged_metrics": ["auc", "test_auc", "test_low_auc", "test_high_auc", "val_auc"],
"early_stop": 15,

        "tensorboard": false
    },
    "comment": "",
    "cross_validation": false
}
