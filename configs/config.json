{
    "name": "HIPSCI_MAJIQ_BiLSTM",

    "n_gpu": 1,

    "arch": {
        "type": "AttnBiLSTM",
        "args": {
            "three_len_feats": true,
            "LSTM_dim": 52,
            "fc_dim": 64,
            "attn_dim": 51,
            "conv_size": 3,
            "n_heads": 1
        }
    },
    "data_loader": {
        "type": "Vanilla_DataLoader",
        "args":{
            "data_dir": "data/hipsci_majiq/exon",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "classification": true,
            "classification_treshold": 0.99
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Vanilla_Trainer",
        "args": {},
        "epochs": 5,

        "save_dir": "saved/",
        "save_period": 251,
        "verbosity": 1,

        "monitor": "max val_auc",
        "early_stop": 15,

        "tensorboard": false
    },
    "comment": "",
    "cross_validation": false
}
