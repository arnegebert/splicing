{
    "name": "ReconJunc_BiLSTM",

    "n_gpu": 1,

    "arch": {
        "type": "BiLSTM2",
        "args": {
            "three_len_feats": false
        }
    },
    "data_loader": {
        "type": "GTEx_DSC_DataLoader",
        "args":{
            "data_dir": "data/dsc_reconstruction_junction/brain_cortex_full.csv",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "GTEx_DSC_Trainer",
        "args": {},
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 251,
        "verbosity": 1,

        "monitor": "min val_loss",
        "early_stop": 15,

        "tensorboard": true
    },
    "comment": ""
}
