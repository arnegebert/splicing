{
    "name": "ReconExon_DSC",

    "n_gpu": 1,

    "arch": {
        "type": "DSC",
        "args": {}
    },
    "data_loader": {
        "type": "ReconExon_DataLoader",
        "args":{
            "data_dir": "",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "classification": true,
            "classification_treshold": 0.99
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "ReconExon_Trainer",
        "args": {},
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 251,
        "verbosity": 1,

        "monitor": "min val_loss",
        "early_stop": 15,

        "tensorboard": true
    },
    "comment": "",
    "cross_validation": true
}
