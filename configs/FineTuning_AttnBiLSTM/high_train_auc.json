{
    "name": "GridSearch_AttnBiLSTMWithHeads",

    "log_directory": "results/FineTuning_AttnBiLSTM",
    "log_file": "high_train_auc",
    "n_gpu": 1,
    "model_parameters": {
      "LSTM_dim": [150],
      "attn_dim": [100],
      "n_heads": [4],
      "head_dim": [24],
      "fc_dim": [128],
      "attn_dropout": [0.3]
    },
    "arch": {
        "type": "AttnBiLSTMWithHeads",
        "args": {}
    },
    "data_loader": {
        "type": "Vanilla_DataLoader",
        "args":{
            "data_dir": "data/hipsci_majiq/exon",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "classification": true,
            "classification_treshold": 0.99
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Vanilla_Trainer",
        "args": {
            "attention": true
        },
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 251,
        "verbosity": 1,

        "monitor": "max val_auc",
        "logged_metrics": ["test_auc", "test_low_auc", "test_high_auc"],
        "early_stop": 15,

        "tensorboard": false
    },
    "comment": "",
    "cross_validation": true
}