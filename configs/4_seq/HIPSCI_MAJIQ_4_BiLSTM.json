{
    "name": "HIPSCI_MAJIQ_4_BiLSTM",

    "n_gpu": 1,

    "arch": {
        "type": "BiLSTM2_4_SEQ",
        "args": {
            "three_len_feats": true
        }
    },
    "data_loader": {
        "type": "Vanilla_4_DataLoader",
        "args":{
            "data_dir": "data/hipsci_majiq/exon",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "binary_cross_entropy",
    "metrics": [
        "auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Vanilla_4_Trainer",
        "args": {},
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 101,
        "verbosity": 1,

        "monitor": "max val_auc",
        "logged_metrics": ["auc", "test_auc", "test_low_auc", "test_high_auc", "val_auc"],
        "early_stop": 15,

        "tensorboard": false
    },
    "cross_validation": false
}
